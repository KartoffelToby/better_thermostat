    "version": "0.2.0",
    "configurations": [
        {
            "name": "HomeAssistant",
            "type": "python",
            "request": "launch",
            "module": "homeassistant",
            "args": [
                "-c",
                "/config"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Attach Remote",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "homeassistant.lan",
            "justMyCode": false,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                },
            ],
        }
    ]
}